@{
    ViewBag.Title = "Crear Incidencia";
}

@using (Html.BeginForm("Create", "Home", FormMethod.Post, new { @class = "create-form display-flex flex-column my-0 mx-auto" }))
{
    <label for="aula">Aula</label>
    <br>
    <select>
        @foreach (var aula in ViewBag.ListaAulas)
        {
            <option value="@aula">@aula</option>
        }
    </select>
    <br>

    <label for="asunto">Asunto</label>
    <br>
    <input id="asunto">
    <br>

    <label for="comentario">Comentario</label>
    <br>
    <textarea id="comentario"></textarea>

    <br>
    <label for="equipo">Equipo</label>
    <br>
    <input id="equipo">
    <br>

    <input type="submit" name="post" value="Enviar">
}