@{
    ViewBag.Title = "Login";
}

@model GestorIncidencias.Models.Binding.LoginQuery

    @using (Html.BeginForm("Index", "Home", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Person Details</th>
            </tr>
            <tr>
                <td>Centro: </td>
                <td>
                    @Html.TextBoxFor(m => m.Centro)
                </td>
            </tr>
            <tr>
                <td>Clave: </td>
                <td>
                    @Html.TextBoxFor(m => m.Clave)
                </td>
            </tr>
            <tr>
                <td></td>
                <td><input type="submit" value="Login" /></td>
            </tr>
        </table>
    }